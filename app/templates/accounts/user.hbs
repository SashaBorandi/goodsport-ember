<div class="col-sm-4">
  <h1>{{model.username}}</h1>
  <h4><small>{{model.owner.email}}</small></h4>
</div>

<div class="col-sm-8">
  <h2>Competitions</h2>

  <table class="table table-striped table-hover">
    <thead><tr>
      <th>Title</th>
      <th>Type</th>
      <th>Public</th>
      <th>Players</th>
      <th>Status</th>
    </tr></thead>
    <tbody>
      {{#each model.competitions as |competition|}}
      <tr>
        <td>{{link-to competition.title 'competitions' competition.slug}}</td>
        <td>{{competition.type}}</td>
        <td><span class="text-success glyphicon glyphicon-ok" aria-hidden="true"></span></td>
        <td>0</td>
        <td><span class="label label-warning">Planning</span></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
