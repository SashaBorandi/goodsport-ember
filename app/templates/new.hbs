<form {{action 'create' on='submit'}} class="form-horizontal">
  {{#if session.isAuthenticated}}
    <div class="form-group">
      <label for="account" class="col-sm-2">Owner</label>
      <div class="col-sm-10">
        {{view "select" content=accounts optionLabelPath='content.username' optionValuePath='content.account' value=account class="form-control"}}
      </div>
    </div>
  {{/if}}
  <div class="form-group">
    <label for="type" class="col-sm-2">Type</label>
    <div class="col-sm-10">
      {{view "select" content=types value=model.type class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="title" class="col-sm-2">Title</label>
    <div class="col-sm-10">
      {{input name="title" value=model.title class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="slug" class="col-sm-2">Slug</label>
    <div class="col-sm-10">
      {{input name="slug" value=model.slug key-up="editSlug" class="form-control"}}
      <p class="help-block">{{address}}</p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Create {{model.type}}</button>
    </div>
  </div>
</form>
