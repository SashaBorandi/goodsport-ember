<div class="container">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="account" class="col-sm-2">Owner</label>
      <div class="col-sm-10">
        {{input name="account" value=account class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="type" class="col-sm-2">Type</label>
      <div class="col-sm-10">
        {{view "select" content=types value=type class="form-control"}}
      </div>
    </div>

    <div class="form-group">
      <label for="title" class="col-sm-2">Title</label>
      <div class="col-sm-10">
        {{input name="title" value=title class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="slug" class="col-sm-2">Slug</label>
      <div class="col-sm-10">
        {{input name="slug" value=slug key-up="editSlug" class="form-control"}}
        <p class="help-block">{{address}}</p>
      </div>
    </div>
  </form>
</div>
