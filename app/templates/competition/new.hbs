<form {{action 'create' on='submit'}} class="form-horizontal">
  <div class="form-group">
    <label for="type" class="col-sm-2">Type</label>
    <div class="col-sm-10">
      {{view "select" content=formats optionValuePath="content.format"
      optionLabelPath="content.name" value=model.format class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="size" class="col-sm-2">Size</label>
    <div class="col-sm-10">
      {{input name="size" value=model.size class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="title" class="col-sm-2">Title</label>
    <div class="col-sm-10">
      {{input name="title" value=model.title class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="slug" class="col-sm-2">Slug</label>
    <div class="col-sm-10">
      {{input name="slug" value=model.slug key-up="editSlug" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Create {{model.type}}</button>
    </div>
  </div>
</form>
