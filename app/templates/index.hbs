{{#if session.isAuthenticated}}
  <div class="jumbotron">
    <h1>Welcome, {{session.user.account.username}}!</h1>
    <p>Get started by creating a competition</p>
    <p>
      {{link-to "Create competition" "new" class="btn btn-primary"}}
    </p>

  </div>
{{else}}
  <form {{action 'register' on='submit'}} class="form-horizontal">
    <div class="form-group">
      <label for="email" class="col-sm-2">Email</label>
      <div class="col-sm-10">
        {{input name="email" value=model.email class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="username" class="col-sm-2">Username</label>
      <div class="col-sm-10">
        {{input name="username" value=model.account.username class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="type" class="col-sm-2">Password</label>
      <div class="col-sm-10">
        {{input name="password" type="password" value=model.password class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Sign up for Goodsport</button>
      </div>
    </div>
  </form>
{{/if}}
